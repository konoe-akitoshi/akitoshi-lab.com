---
const { title, description, ogImage, canonicalUrl } = Astro.props;
import { ViewTransitions } from 'astro:transitions';
---

<head>
  <meta charset="UTF-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} >
  <title>{title}</title>
  <ViewTransitions />
  <link rel="canonical" href={canonicalUrl} />
  
  <!-- パフォーマンス最適化 -->
  <link rel="dns-prefetch" href="https://images.microcms-assets.io" />
  <link rel="preconnect" href="https://images.microcms-assets.io" crossorigin />
  
  <!-- クリティカルCSSの最適化 -->
  <style is:inline>
    body {
      margin: 0;
      padding: 0;
      font-family: monospace, sans-serif;
      background-color: #000;
      color: #fff;
      overflow-x: hidden;
      overflow-y: auto;
    }
  </style>
  
  <!-- プリロードスロット -->
  <slot name="preload" />
  
  <meta name="description" content={description} />
  <meta name="keyword" content="ロボット, ブログ" />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:type" content="article" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:site_name" content="Akitoshi Lab." />
  <meta property="og:image" content={ogImage} />
  <meta name="twitter:site" content="@konoe_akitoshi" />
  <meta name="twitter:card" content="summary_large_image" />
</head>
