---
const { title, description, ogImage, canonicalUrl, keyword } = Astro.props;
---

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="Content-Language" content="ja" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} >
  <title>{title}</title>
  <link rel="canonical" href={canonicalUrl} />
  
  <!-- クリティカルCSSの最適化 -->
  <style is:inline>
    body {
      margin: 0;
      padding: 0;
      overflow-x: hidden;
      overflow-y: auto;
    }
  </style>
  
  <!-- プリロードスロット -->
  <slot name="preload" />
  
  <meta name="description" content={description} />
  <meta name="keyword" content={keyword} />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:type" content="article" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:site_name" content="Akitoshi Lab." />
  <meta property="og:image" content={new URL(ogImage, Astro.site).href} />
  <meta name="twitter:site" content="@konoe_akitoshi" />
  <meta name="twitter:card" content="summary_large_image" />
</head>
