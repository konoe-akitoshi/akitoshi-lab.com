---
import "uno.css";
// import { Image } from "astro:assets";
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Card from "../components/Card.astro";
import Prizes from "../components/Prizes.astro";
import Environment from "../components/Environment.astro";
import Affiliated from "../components/Affiliated.astro";
import Image from "astro/components/Image.astro";
import Badge1 from "../assets/img/badge/dell-genai-foundations.webp";
import Badge2 from "../assets/img/badge/dell-security-foundations-2024.webp";
---

<html lang="ja">
  <Head
    title="About me | Akitoshi Lab."
    description="ロボットが大好きな大学生です．思ったことや日常の出来事をつぶやきます．たまに技術．"
    ogImage="https://images.microcms-assets.io/assets/a1f82a67495a4c7c8cd02269aa346701/1b10a9dfa3dc476cb8a9154521d1f4bb/OGP.webp"
    canonicalUrl="https://akitoshi-lab.com/about/"
  />
  <body class="m-0 p-0 font-snself overflow-x-hidden">
    <Header />
    <main class="max-w-3xl mx-auto pt-10 pb-12 p-4">
      <astro-island>
        <Card />
      </astro-island>

      <section class="mb-10">
        <h2 class="text-3xl mb-4">💭 Mind</h2>
        <hr class="border-gray-400 mb-4" />
        <p>好きなことをとことん極める</p>
      </section>

      <astro-island>
        <Affiliated />
      </astro-island>

      <section class="mb-10">
        <h2 class="text-3xl mb-4">🪪 資格</h2>
        <hr class="border-gray-400 mb-4" />
        <h3 class="text-xl mb-2">認定資格</h3>
        <!-- badge1 -->
        <a
          href="https://www.credly.com/badges/dc1e577a-c863-4c11-8377-b51780f429ec/public_url"
          class="button inline-flex items-center p-2"
        >
          <Image
            src={Badge1}
            width={110}
            densities={[1, 2]}
            alt="Badge1"
            class=""
          />
        </a>
        <!-- badge2 -->
        <a
          href="https://www.credly.com/badges/6ff7b8a5-c4c8-4d1d-a683-071162cb3a5f/public_url"
          class="button inline-flex items-center p-2"
        >
          <Image
            src={Badge2}
            width={110}
            densities={[1, 2]}
            alt="Badge2"
            class=""
          />
        </a>

        <h3 class="text-xl mb-2">国家資格</h3>
        <p>第四級アマチュア無線技士</p>
      </section>

      <astro-island>
        <Environment />
      </astro-island>

      <astro-island>
        <Prizes />
      </astro-island>
    </main>
    <Footer />
  </body>
</html>
