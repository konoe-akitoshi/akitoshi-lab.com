---
// Your main page
import "uno.css";
import { config } from "../settings/site-settings";
import { Image } from "astro:assets";
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Card from "../components/Card.astro";
import Works from "../components/Works.astro";
import Prizes from "../components/Prizes.astro";
---

<html lang="ja">
  <Head
    title="About me | Akitoshi Lab."
    description="ロボットが大好きな大学生です．思ったことや日常の出来事をつぶやきます．たまに技術．"
    ogImage="https://images.microcms-assets.io/assets/a1f82a67495a4c7c8cd02269aa346701/1b10a9dfa3dc476cb8a9154521d1f4bb/OGP.webp"
  />
  <body class="m-0 p-0 font-snself overflow-x-hidden">
    <Header />
    <main class="max-w-3xl mx-auto pt-10 pb-12 p-4">
      <astro-island>
        <Card />
      </astro-island>

      <section class="mb-10">
        <h2 class="text-3xl mb-4">サイト環境</h2>
        <hr class="border-gray-400 mb-4" />
        <h3 class="text-xl mb-2">物理環境</h3>
        <p>Yamaha RTX1210</p>
        <p>Dell S6010-on</p>
        <p>HPE DL360 gen8</p>
        <p>Dell R620</p>
        <p>Dell R720xd</p>
        <h3 class="text-xl mb-2">計算環境</h3>
        <p>Ubuntu Server</p>
        <p>Nginx</p>
        <p>Nuxt3</p>
        <p>Micro CMS</p>
      </section>

      <section class="mb-10">
        <h2 class="text-3xl mb-4">資格</h2>
        <hr class="border-gray-400 mb-4" />
        <h3 class="text-xl mb-2">Credly</h3>
        <!-- badge1 -->
        <div
          data-iframe-width="150"
          data-iframe-height="270"
          data-share-badge-id="6ff7b8a5-c4c8-4d1d-a683-071162cb3a5f"
          data-share-badge-host="https://www.credly.com"
        >
        </div>
        <script
          type="text/javascript"
          async
          src="//cdn.credly.com/assets/utilities/embed.js"
        ></script>
        <!-- badge2 -->
        <div
          data-iframe-width="150"
          data-iframe-height="270"
          data-share-badge-id="dc1e577a-c863-4c11-8377-b51780f429ec"
          data-share-badge-host="https://www.credly.com"
        >
        </div>
        <script
          type="text/javascript"
          async
          src="//cdn.credly.com/assets/utilities/embed.js"
        ></script>

        <h3 class="text-xl mb-2">No Badge</h3>
        <p>第四級アマチュア無線技士</p>
      </section>

      <astro-island>
        <Works />
      </astro-island>

      <section class="mb-10">
        <h2 class="text-3xl mb-4">Affiliated</h2>
        <hr class="border-gray-400 mb-4" />
        <span class="i-hugeicons-university"></span>
        <p>電気通信大学</p>
        <span class="i-bi-pc-display"></span>
        <p>MMA</p>
        <p>Scramble</p>
      </section>

      <astro-island>
        <Prizes />
      </astro-island>

    </main>
    <Footer />
  </body>
</html>
