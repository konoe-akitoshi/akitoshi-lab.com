---
import Layout from "../layouts/Layout.astro";
import GalleryComponent from "../components/Gallery.astro";
---

<Layout
  title="Gallery | Akitoshi Lab."
  description="モダンなギャラリーページ。様々な作品を展示しています。"
  ogImage="/img/OGP.webp"
  bodyClass="m-0 p-0 font-snself overflow-x-hidden"
  useMainWrapper={false}
>
  <div class="gallery-page">
    <div class="gallery-header">
      <h2 class="gallery-title">GALLERY</h2>
    </div>
    
    <GalleryComponent />
  </div>
</Layout>

<style>
  .gallery-page {
    width: 100%;
    min-height: 100vh;
    padding: 3rem 0 5rem;
    margin: 0;
  }

  .gallery-header {
    padding: 2rem 0 3rem;
    text-align: center;
    margin: 0 auto;
  }

  .gallery-title {
    font-size: 1rem;
    font-weight: normal;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
  }
</style>
