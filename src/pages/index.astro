---
import Head from '../components/Head.astro';
import BackgroundSlideshow from '../components/BackgroundSlideshow.astro';
import Slideshow from '../components/Slideshow.jsx';
import { Image } from 'astro:assets';
import Avatar from '../assets/img/avatar.webp';
import BlogIcon from '../assets/blog.svg';
import WorksIcon from '../assets/works.svg';
import GalleryIcon from '../assets/gallery.svg';
---

<html lang="ja">
  <Head 
    title="Home | Akitoshi Lab."
    description="ロボットが大好きな大学生です．思ったことや日常の出来事をつぶやきます．たまに技術．"
    ogImage="https://images.microcms-assets.io/assets/a1f82a67495a4c7c8cd02269aa346701/1b10a9dfa3dc476cb8a9154521d1f4bb/OGP.webp"
    canonicalUrl="https://akitoshi-lab.com/"
  />
  <body class="m-0 p-0 font-mono bg-black overflow-x-hidden">
    <header class="fixed top-0 w-full text-left bg-transparent p-4 lg:p-8 z-1000 grid place-items-start">
      <a href="https://akitoshi-lab.com/" class="text-white no-underline text-base lg:text-lg">
        <h1 class="my-1.5">Akitoshi Lab.</h1>
      </a>
    </header>

    <BackgroundSlideshow />

    <div class="intro-link fixed top-1/2 right-1/2 transform translate-x-1/2 -translate-y-1/2 bg-black bg-opacity-50 p-3 rounded-lg text-center w-11/12 max-w-full lg:right-4 lg:transform lg:translate-x-0 lg:w-1/4 lg:p-5 z-1001">
      <h1 class="text-white text-lg mb-3 break-words lg:text-2xl lg:mb-5">Hi👋 I'm Akitoshi Saeki.</h1>
      <a href="/about" class="button inline-flex items-center justify-start gap-2 bg-gray-600 text-white no-underline border-none p-3 rounded-lg cursor-pointer mb-2 w-full box-border transition-colors duration-300 hover:bg-gray-700 active:bg-gray-800 focus:outline-none lg:gap-4 lg:p-5 lg:mb-4">
        <Image src={Avatar} width={32} densities={[1, 2]} alt="avatar" class="w-6 h-6 rounded-lg lg:w-8 lg:h-8" />
        About me
      </a>
      <a href="https://blog.akitoshi-lab.com/" class="button inline-flex items-center justify-start gap-2 bg-gray-600 text-white no-underline border-none p-3 rounded-lg cursor-pointer mb-2 w-full box-border transition-colors duration-300 hover:bg-gray-700 active:bg-gray-800 focus:outline-none lg:gap-4 lg:p-5 lg:mb-4">
        <Image src={BlogIcon} width={32} densities={[1, 2]} alt="blog" class="w-6 h-6 lg:w-8 lg:h-8" />
        Blog
      </a>
      <a href="/works" class="button inline-flex items-center justify-start gap-2 bg-gray-600 text-white no-underline border-none p-3 rounded-lg cursor-pointer mb-2 w-full box-border transition-colors duration-300 hover:bg-gray-700 active:bg-gray-800 focus:outline-none lg:gap-4 lg:p-5 lg:mb-4">
        <Image src={WorksIcon} width={32} densities={[1, 2]} alt="works" class="w-6 h-6 lg:w-8 lg:h-8" />
        Works
      </a>
      <a href="/" class="button inline-flex items-center justify-start gap-2 bg-gray-600 text-white no-underline border-none p-3 rounded-lg cursor-pointer mb-2 w-full box-border transition-colors duration-300 hover:bg-gray-700 active:bg-gray-800 focus:outline-none lg:gap-4 lg:p-5 lg:mb-4">
        <Image src={GalleryIcon} width={32} densities={[1, 2]} alt="gallery" class="w-6 h-6 lg:w-8 lg:h-8" />
        Gallery
      </a>
    </div>

    <footer class="fixed bottom-0 w-full text-left bg-transparent p-4 lg:p-8 z-1000 text-gray-500 grid place-items-start">
      <p class="my-0">&copy; 2024 Akitoshi Saeki</p>
    </footer>
  </body>
</html>
